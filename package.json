{
  "name": "@popcorn/contracts",
  "version": "1.0.0",
  "main": "index",
  "scripts": {
    "build": "yarn clean && hardhat compile",
    "dev": "yarn hardhat node",
    "dev:deploy": "yarn hardhat dev:deploy --network localhost",
    "dev:deployTestnet": "yarn hardhat dev:deployTestnet --network rinkeby",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "clean": "rimraf ./cache & rimraf ./artifacts",
    "compile": "yarn clean && hardhat compile ",
    "docify": "rm -rf ./.gitbook.yaml ./docgen/SUMMARY.md ./docgen/docs/* && node scripts/docify.js",
    "test": "yarn hardhat test test/*.test.ts",
    "test:fork": "yarn hardhat test test/fork/*.test.ts",
    "coverage": "yarn hardhat coverage --testfiles 'test/*.test.ts'",
    "postinstall": "yarn compile",
    "prettify": "yarn lint-staged --allow-empty"
  },
  "lint-staged": {
    "*.{sol,ts,tsx}": "prettier --write"
  },
  "devDependencies": {
    "@float-capital/solidity-coverage": "^0.7.17",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@anthonymartin/solidity-docgen": "0.5.13",
    "@chainlink/contracts": "^0.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "@popcorn/utils": "*",
    "@setprotocol/set-protocol-v2": "^0.0.45",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.0",
    "@uniswap/sdk": "^3.0.3",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "bluebird": "^3.7.2",
    "chai": "^4.3.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.3",
    "merkle-tree-solidity": "^1.0.8",
    "mocha": "^8.4.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "solc": "0.7.6",
    "solidity-coverage": "^0.7.6",
    "surya": "^0.4.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4",
    "yearn-protocol": "yaoandrew/yearn-vaults#v0.4.0"
  },
  "license": "MIT"
}
